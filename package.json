{
  "name": "ecommerce-microservices",
  "version": "0.0.1",
  "description": "E-commerce microservices architecture built with NestJS, TypeScript, Kafka, and Redis",
  "author": "Your Name",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "typescript",
    "e-commerce",
    "kafka",
    "redis",
    "docker"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:api-gateway": "nest start api-gateway --watch",
    "start:auth": "nest start auth-microservice --watch",
    "start:cart": "nest start cart-microservice --watch",
    "start:products": "nest start products-microservice --watch",
    "start:orders": "nest start orders-microservice --watch",
    "start:users": "nest start user-microservice --watch",
    "start:shipping": "nest start shipping-microservice --watch",
    "start:notifications": "nest start notification-microservice --watch",
    "start:mail": "nest start mail-microservice --watch",
    "start:stock": "nest start stock-microservice --watch",
    "start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:auth\" \"npm run start:cart\" \"npm run start:products\" \"npm run start:orders\" \"npm run start:users\" \"npm run start:shipping\" \"npm run start:notifications\" \"npm run start:mail\" \"npm run start:stock\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "install:all": "npm install && npm run install:services",
    "install:services": "npm run install:auth && npm run install:cart && npm run install:products && npm run install:orders && npm run install:users && npm run install:shipping && npm run install:notifications && npm run install:mail && npm run install:stock && npm run install:gateway",
    "install:auth": "cd auth-microservice && npm install",
    "install:cart": "cd cart-microservice && npm install",
    "install:products": "cd products-microservice && npm install",
    "install:orders": "cd orders-microservice && npm install",
    "install:users": "cd user-microservice && npm install",
    "install:shipping": "cd shipping-microservice && npm install",
    "install:notifications": "cd notification-microservice && npm install",
    "install:mail": "cd mail-microservice && npm install",
    "install:stock": "cd stock-microservice && npm install",
    "install:gateway": "cd api-gateway && npm install",
    "build:common": "cd libs && npm run build",
    "watch:common": "cd libs && npm run build:watch",
    "update:common": "cd libs && npm run update",
    "clean": "rimraf dist node_modules */node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "workspaces": [
    "libs",
    "api-gateway",
    "auth-microservice",
    "cart-microservice",
    "mail-microservice",
    "notification-microservice",
    "orders-microservice",
    "products-microservice",
    "shipping-microservice",
    "stock-microservice",
    "user-microservice"
  ],
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/throttler": "^6.2.1",
    "@elastic/elasticsearch": "^8.11.0",
    "@nestjs/elasticsearch": "^11.0.0",
    "elastic-apm-node": "^4.7.3",
    "typeorm": "^0.3.17",
    "mysql2": "^3.11.5",
    "redis": "^4.7.0",
    "cache-manager-redis-store": "^3.0.1",
    "bcrypt": "^5.1.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "kafkajs": "^2.2.4",
    "amqplib": "^0.10.4",
    "axios": "^1.7.7",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "nodemailer": "^6.9.15",
    "handlebars": "^4.7.8",
    "stripe": "^17.3.1",
    "uuid": "^11.0.3",
    "moment": "^2.30.1",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/elasticsearch": "^5.0.40",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/winston": "^2.4.4",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^10.0.0",
    "@types/lodash": "^4.17.12",
    "@types/amqplib": "^0.10.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "typescript-eslint": "^8.20.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.20",
    "supertest": "^7.0.0",
    "prettier": "^3.4.2",
    "nodemon": "^3.1.10",
    "concurrently": "^9.0.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapping": {
      "^@libs/(.*)$": "<rootDir>/libs/$1",
      "^@shared/(.*)$": "<rootDir>/libs/shared/$1"
    }
  }
}